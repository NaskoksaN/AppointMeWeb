@model RegisterUser

<form id="registerForm" asp-route-returnUrl="@Model.RegisterFormModel.ReturnUrl" method="post">
    <h2>Create a new account.</h2>
    <hr />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-floating">
        <input asp-for="@Model.RegisterFormModel.FirstName" class="form-control" />
        <label asp-for="@Model.RegisterFormModel.FirstName"></label>
        <span asp-validation-for="@Model.RegisterFormModel.FirstName" class="text-danger"></span>
    </div>

    <div class="form-floating">
        <input asp-for="@Model.RegisterFormModel.LastName" class="form-control" />
        <label asp-for="@Model.RegisterFormModel.LastName"></label>
        <span asp-validation-for="@Model.RegisterFormModel.LastName" class="text-danger"></span>
    </div>

    <div class="form-floating">
        <input asp-for="@Model.RegisterFormModel.DOB" class="form-control" value="@DateTime.Now.AddYears(-20)" />
        <label asp-for="@Model.RegisterFormModel.DOB"></label>
        <span asp-validation-for="@Model.RegisterFormModel.DOB" class="text-danger"></span>
    </div>

    <div class="form-floating">
        <input asp-for="@Model.RegisterFormModel.PhoneNumber" class="form-control" />
        <label asp-for="@Model.RegisterFormModel.PhoneNumber"></label>
        <span asp-validation-for="@Model.RegisterFormModel.PhoneNumber" class="text-danger"></span>
    </div>

    <div class="form-floating">
        <input asp-for="@Model.RegisterFormModel.Email" class="form-control" autocomplete="username" aria-required="true" />
        <label asp-for="@Model.RegisterFormModel.Email"></label>
        <span asp-validation-for="@Model.RegisterFormModel.Email" class="text-danger"></span>
    </div>

    <div class="form-floating">
        <input asp-for="@Model.RegisterFormModel.Password" class="form-control" autocomplete="new-password" aria-required="true" />
        <label asp-for="@Model.RegisterFormModel.Password"></label>
        <span asp-validation-for="@Model.RegisterFormModel.Password" class="text-danger"></span>
    </div>

    <div class="form-floating">
        <input asp-for="@Model.RegisterFormModel.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
        <label asp-for="@Model.RegisterFormModel.ConfirmPassword"></label>
        <span asp-validation-for="@Model.RegisterFormModel.ConfirmPassword" class="text-danger"></span>
    </div>

    <div class="form-check mb-3">
        <input type="checkbox" class="form-check-input" id="registerAsBusinessProvider" onclick="Check()" />
        <label class="form-check-label" for="registerAsBusinessProvider">Register as Business Provider</label>
    </div>

    <div id="businessProviderFields" class="business-provider-fields" style="display: none;">
        <partial name="_BusinessUserRegisterPartial" model="Model.RegisterBusinessFormModel" />
    </div>

    <button type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />

   
}


