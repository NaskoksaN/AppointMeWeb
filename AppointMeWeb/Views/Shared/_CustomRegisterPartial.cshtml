@model RegisterFormModel

<form id="registerForm" asp-action="Register" method="post">
    <h2>Create a new account.</h2>
    <hr />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-floating mb-2">
        <input asp-for="@Model.FirstName" class="form-control" />
        <label asp-for="@Model.FirstName"></label>
        <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
    </div>

    <div class="form-floating mb-2">
        <input asp-for="@Model.LastName" class="form-control" />
        <label asp-for="@Model.LastName"></label>
        <span asp-validation-for="@Model.LastName" class="text-danger"></span>
    </div>

    <div class="form-floating mb-2">
        <input asp-for="@Model.DOB" class="form-control" type="date" value="@DateTime.Today"/>
        <label asp-for="@Model.DOB"></label>
        <span asp-validation-for="@Model.DOB" class="text-danger"></span>
    </div>

    <div class="form-floating mb-2">
        <input asp-for="@Model.PhoneNumber" class="form-control" />
        <label asp-for="@Model.PhoneNumber"></label>
        <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
    </div>

    <div class="form-floating mb-2">
        <input asp-for="@Model.Email" class="form-control" autocomplete="username" aria-required="true" />
        <label asp-for="@Model.Email"></label>
        <span asp-validation-for="@Model.Email" class="text-danger"></span>
    </div>

    <div class="form-floating mb-2">
        <input asp-for="@Model.Password" class="form-control" autocomplete="new-password" aria-required="true" />
        <label asp-for="@Model.Password"></label>
        <span asp-validation-for="@Model.Password" class="text-danger"></span>
    </div>

    <div class="form-floating mb-2">
        <input asp-for="@Model.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
        <label asp-for="@Model.ConfirmPassword"></label>
        <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
    </div>

    <div class="form-check mb-2">
        <input asp-for="IsBusinessProvider"  type="checkbox" class="form-check-input" id="registerAsBusinessProvider" onclick="Check()" />
        <label class="form-check-label" for="registerAsBusinessProvider">Register as Business Provider</label>
    </div>

    <div id="businessProviderFields" class="business-provider-fields" style="display: none;">
        <h3>Business Provider Registration</h3>

        <div class="form-floating mb-2">
            <input asp-for="Name" class="form-control" />
            <label asp-for="Name"></label>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-floating mb-2">
            <input asp-for="Description" class="form-control" />
            <label asp-for="Description"></label>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-floating mb-2">
            <input asp-for="Town" class="form-control" />
            <label asp-for="Town"></label>
            <span asp-validation-for="Town" class="text-danger"></span>
        </div>

        <div class="form-floating mb-2">
            <input asp-for="Address" class="form-control" />
            <label asp-for="Address"></label>
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>

        <div class="form-floating mb-2">
            <input asp-for="Url" class="form-control" />
            <label asp-for="Url"></label>
            <span asp-validation-for="Url" class="text-danger"></span>
        </div>

        <div class="form-floating mb-2">
            <select asp-for="BusinessType" class="form-select">
                <option value="">Please select a business type</option>
                @foreach (var type in Enum.GetValues(typeof(AppointMeWeb.Infrastrucure.Data.Enum.BusinessType)))
                {
                    <option value="@type">@type</option>
                }
            </select>
            <label asp-for="BusinessType"></label>
            <span asp-validation-for="BusinessType" class="text-danger"></span>
        </div>
    </div>

    <button type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />

   
}


