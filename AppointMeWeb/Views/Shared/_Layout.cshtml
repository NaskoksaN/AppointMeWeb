<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] | Schedule Made Simple</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AppointMeWeb.styles.css" asp-append-version="true" />
    <style>
        .custom-navbar {
            /* background-color: #2F3E6C !important; */
            background-color: #273E51 !important;
        }

        .footer {
            /* background-color: #2F3E6C !important; */
            background-color: #273E51 !important;
            color: #FF8C00 !important;
        }

        .custom-navbar .navbar-brand,
        .custom-navbar .navbar-nav .nav-link {
            color: #FF8C00 !important;
        }

        .custom-navbar .navbar-toggler {
            background-color: #FF8C00 !important;
        }

        .custom-navbar .navbar-nav .nav-link:hover {
            color: white !important; 
        }

        .custom-navbar .navbar-brand:hover {
            color: white !important; 
        }

        .linkedin-icon:hover {
            background-color: #FF8C00 !important;
            /* color: #FF8C00 !important; */ 
            
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light custom-navbar border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Book with AppointMe</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    @await Component.InvokeAsync(nameof(MainMenuComponent))
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-1">
            @RenderBody()
            
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @DateTime.Today.Year - AppointMeWeb | Schedule Made Simple by Atanas Bobchev
            | LinkedIn: 
            <a href="https://www.linkedin.com/in/atanas-bobchev-62a99b289/" target="_blank" class="linkedin-icon">
                <i class="fa-brands fa-linkedin" style="font-size: 25px; color:whitesmoke !important;"></i>
            </a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>



