@model UserHomeIndexView;
@{
    ViewData["Title"] = "Appointments";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 mb-4">
            <h3 class="text-warning" style="text-align:center">Active Appointments</h3>
            <div class="appointment-column" style="height: 70vh; overflow-y: auto;">
                @if (Model.Active.Any())
                {
                    <div class="list-group">
                        @foreach (var appointment in Model.Active)
                        {
                            <div class="list-group-item mb-3">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <h5 class="mb-1">@appointment.BusinessProviderName</h5>
                                        <p class="mb-1">
                                            <strong>Date:</strong> @appointment.AppointmentDate.ToString("yyyy-MM-dd")<br />
                                            <strong>Time:</strong> @appointment.StartTime.ToString(@"hh\:mm") - @appointment.EndTime.ToString(@"hh\:mm")
                                        </p>
                                    </div>
                                    <button class="btn btn-danger btn-sm" onclick="cancelAppointment(@appointment.AppointmentId)">Cancel</button>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <p>No active appointments.</p>
                }
            </div>
        </div>

        <div class="col-md-6 mb-4">
            <h3 class="text-warning" style="text-align:center">Canceled Appointments</h3>
            <div class="appointment-column" style="height: 70vh; overflow-y: auto;">
                @if (Model.Canceled.Any())
                {
                    <div class="list-group">
                        @foreach (var appointment in Model.Canceled)
                        {
                            <div class="list-group-item mb-3">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <h5 class="mb-1">@appointment.BusinessProviderName</h5>
                                        <p class="mb-1">
                                            <strong>Date:</strong> @appointment.AppointmentDate.ToString("yyyy-MM-dd")<br />
                                            <strong>Time:</strong> @appointment.StartTime.ToString(@"hh\:mm") - @appointment.EndTime.ToString(@"hh\:mm")
                                        </p>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <p>No canceled appointments.</p>
                }
            </div>
        </div>
    </div>
</div>

<script>
    function cancelAppointment(appointmentId) {
        console.log("Cancel appointment with ID:", appointmentId);
    }
</script>

<style>
    .appointment-column {
        border: 1px solid #dee2e6;
        border-radius: 5px;
        padding: 10px;
        background-color: #f8f9fa;
    }
</style>
