
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] | Schedule Made Simple</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AppointMeWeb.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/custom-styles-Layout.css" asp-append-version="true" />
    <style>
      
        html, body {
            height: 100%;
            margin: 0;
        }

        body {
            display: flex;
            flex-direction: column;
            overflow-x: hidden;
        }

        header {
            flex: 0 0 auto;
        }

        main {
            flex: 1 1 auto;
            overflow-y: auto;
            margin: 0 !important;
        }

        footer {
            flex: 0 0 auto;
        }

        .container {
            flex: 1 1 100%;
            max-width: 100% !important;
            width: 100%;
            padding-left: 0;
            padding-right: 0; 
            padding-top: 0; 
        }

        nav.navbar {
            margin-bottom: 0 !important; 
        }
        .navbar.bg-custom {
            background-color: #273E51 !important;
        }

            .navbar.bg-custom .nav-link {
                color: #FF8C00 !important; 
                transition: color 0.3s ease, background-color 0.3s ease; 

                .navbar.bg-custom .nav-link:hover {
                    color: #fff !important; 
                    background-color: #FF8C00 !important; 
                }

            .navbar.bg-custom .dropdown-menu {
                background-color: #273E51 !important; 
            }

                .navbar.bg-custom .dropdown-menu .dropdown-item {
                    color: #FF8C00 !important; 
                }

                    .navbar.bg-custom .dropdown-menu .dropdown-item:hover {
                        color: #fff !important; 
                        background-color: #FF8C00 !important; 
                    }

        .footer {
            background-color: #273E51 !important;
            color: #FF8C00 !important;
            padding: 1rem;
            text-align: center;
            line-height:normal !important;
        }

            .footer a {
                color: #FF8C00 !important;
            }

                .footer a:hover {
                    color: white !important;
                }

        .linkedin-icon:hover {
            background-color: #FF8C00 !important;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light custom-navbar border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Book with AppointMe</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                @if (User.IsUser())
                {
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        @await Component.InvokeAsync(nameof(UserMenuComponent))
                        <partial name="_LoginPartial" />
                    </div>
                }
            </div>
        </nav>
    </header>

    <div class="container main-content">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        @await Component.InvokeAsync(nameof(FooterComponent))
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate.unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

