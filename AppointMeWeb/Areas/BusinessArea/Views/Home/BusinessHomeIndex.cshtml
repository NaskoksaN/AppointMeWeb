
@model BusinessStatisticsViewModel

<div class="container mt-5">
    <div class="card shadow">
        <div class="card-body">
            <div class="container mt-4">
                <div class="row">
                    <!-- Total Appointments -->
                    <div class="col-md-4">
                        <div class="card shadow mb-4">
                            <div class="card-body text-center">
                                <h5>Total Appointments</h5>
                                <p id="totalAppointments" class="display-6">@Model.TotalMonthlyAppointments</p>
                                <p>Appointments from the start of the month</p>
                            </div>
                        </div>
                    </div>
                    <!-- Average Rating -->
                    <div class="col-md-4">
                        <div class="card shadow mb-4">
                            <div class="card-body text-center">
                                <h5>Average Rating</h5>
                                <p id="totalAppointments" class="display-6">@Model.AverageRating</p>
                                <div class="stars">
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        var isFilled = i <= Model.AverageRating;
                                        var isHalfFilled = (i == Math.Ceiling(Model.AverageRating) && Model.AverageRating % 1 != 0);

                                        if (isFilled)
                                        {
                                            <i class="fa fa-star"></i>  <!-- Full Star -->
                                        }
                                        else if (isHalfFilled)
                                        {
                                            <i class="fa fa-star-half-alt"></i>  <!-- Half Star -->
                                        }
                                        else
                                        {
                                            <i class="fa fa-star-o"></i>  <!-- Empty Star -->
                                        }
                                    }
                                </div>
                                <p>Average client satisfaction</p>
                            </div>
                        </div>
                    </div>
                    <!-- New Clients This Month -->
                    <div class="col-md-4">
                        <div class="card shadow mb-4">
                            <div class="card-body text-center">
                                <h5>New Clients This Month</h5>
                                <p id="newClients" class="display-6">@Model.NewClientsThisMonth</p>
                                <p>First-time clients this month</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

