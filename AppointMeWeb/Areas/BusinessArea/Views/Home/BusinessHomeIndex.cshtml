
@model BusinessStatisticsViewModel

<div class="container mt-5">
    <div class="card shadow">
        <div class="card-body">
            <div class="container mt-4">
                <div class="row">
                    <!-- Total Appointments -->
                    <div class="col-md-4">
                        <div class="card shadow mb-4">
                            <div class="card-body text-center">
                                <h5>Total Appointments</h5>
                                <p id="totalAppointments" class="display-6">@Model.TotalMonthlyAppointments</p>
                                <p>Appointments from the start of the month</p>
                            </div>
                        </div>
                    </div>
                    <!-- Average Rating -->
                    <div class="col-md-4">
                        <div class="card shadow mb-4">
                            <div class="card-body text-center">
                                <h5>Average Rating</h5>
                                <p id="averageRating" class="display-6">@Model.AverageRating</p>
                                <p>Average client satisfaction</p>
                            </div>
                        </div>
                    </div>
                    <!-- New Clients This Month -->
                    <div class="col-md-4">
                        <div class="card shadow mb-4">
                            <div class="card-body text-center">
                                <h5>New Clients This Month</h5>
                                <p id="newClients" class="display-6">@Model.NewClientsThisMonth</p>
                                <p>First-time clients this month</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // Load ratings from the last 7 days when button is clicked
    function loadRecentRatings() {
        const ratingsResult = document.getElementById('ratingsResult');
        ratingsResult.style.display = 'block';
        ratingsResult.innerHTML = '<p class="text-center">Loading ratings from the last 7 days...</p>';

        $.ajax({
            url: '@Url.Action("GetRatingsLast7Days", "BusinessHome", new { area = "BusinessArea" })',
            type: 'GET',
            success: function (data) {
                displayRatings(data);
            },
            error: function () {
                ratingsResult.innerHTML = '<p class="text-center text-danger">Error loading ratings.</p>';
            }
        });
    }

    // Load ratings for a custom date range
    function loadRatingsForPeriod() {
        const ratingsResult = document.getElementById('ratingsResult');
        ratingsResult.style.display = 'block';
        ratingsResult.innerHTML = '<p class="text-center">Loading ratings for selected period...</p>';

        $.ajax({
            url: '@Url.Action("GetRatingsForPeriod", "BusinessHome", new { area = "BusinessArea" })',
            type: 'GET',
            success: function (data) {
                displayRatings(data);
            },
            error: function () {
                ratingsResult.innerHTML = '<p class="text-center text-danger">Error loading ratings.</p>';
            }
        });
    }

    // Display ratings in the ratingsResult div
    function displayRatings(ratings) {
        const ratingsResult = document.getElementById('ratingsResult');
        ratingsResult.innerHTML = '';

        if (ratings.length === 0) {
            ratingsResult.innerHTML = '<p class="text-center">No ratings found for the selected period.</p>';
            return;
        }

        ratings.forEach(rating => {
            const ratingDiv = document.createElement('div');
            ratingDiv.className = 'card mb-2';
            ratingDiv.innerHTML = `
                        <div class="card-body">
                            <h6>${rating.clientName}</h6>
                            <p>Rating: ${rating.stars}⭐</p>
                            <p>${rating.feedback}</p>
                        </div>
                    `;
            ratingsResult.appendChild(ratingDiv);
        });
    }
</script>
