<div class="container mt-4">
    <div class="container mt-4">
        <div class="row">
            <!-- Current Weekly Appointments -->
            <div class="container mt-4">
                <h2>Business Overview</h2>
                <div class="row">
                    <div class="col-md-4">
                        <div class="card shadow mb-4">
                            <div class="card-body text-center">
                                <h5>Total Appointments</h5>
                                <p class="display-6">50</p>
                                <p>Appointments booked this month</p>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="card shadow mb-4">
                            <div class="card-body text-center">
                                <h5>Average Rating</h5>
                                <p class="display-6">4.6⭐</p>
                                <p>Average client satisfaction rating</p>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="card shadow mb-4">
                            <div class="card-body text-center">
                                <h5>New Clients This Month</h5>
                                <p class="display-6">10</p>
                                <p>Clients who booked for the first time</p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4">
                        <div class="card shadow mb-4">
                            <div class="card-body text-center">
                                <h5>Cancellations</h5>
                                <p class="display-6">5</p>
                                <p>Cancelled appointments this month</p>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="card shadow mb-4">
                            <div class="card-body text-center">
                                <h5>Service Satisfaction</h5>
                                <p>Most popular service: Haircut</p>
                                <p>Overall satisfaction: 90%</p>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="card shadow mb-4">
                            <div class="card-body text-center">
                                <h5>Client Engagement</h5>
                                <p class="display-6">20%</p>
                                <p>Percentage of repeat clients this month</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>



    <!-- On-Demand Rating Data Buttons -->
    <div class="text-center mt-4">
        <button class="btn btn-primary mx-2" onclick="loadRecentRatings()">Ratings Last 7 Days</button>
        <button class="btn btn-secondary mx-2" onclick="loadRatingsForPeriod()">Ratings by Date Range</button>
    </div>

    <!-- Ratings Result Section (Hidden until data is loaded) -->
    <div id="ratingsResult" class="mt-4" style="display: none;">
        <p class="text-center">Loading ratings...</p>
    </div>

    <!-- Important Alerts Section -->
    <div id="alerts" class="mt-4">
        <!-- Example alert -->
        <div class="alert alert-warning" role="alert">
            Reminder: You have 2 appointments needing follow-up!
        </div>
        <div class="alert alert-info" role="alert">
            New review received: "Fantastic service!"
        </div>
    </div>
</div>

<script>
    // Load ratings from the last 7 days when button is clicked
    function loadRecentRatings() {
        const ratingsResult = document.getElementById('ratingsResult');
        ratingsResult.style.display = 'block';
        ratingsResult.innerHTML = '<p class="text-center">Loading ratings from the last 7 days...</p>';

        $.ajax({
            url: '@Url.Action("GetRatingsLast7Days", "BusinessHome", new { area = "BusinessArea" })',
            type: 'GET',
            success: function (data) {
                displayRatings(data);
            },
            error: function () {
                ratingsResult.innerHTML = '<p class="text-center text-danger">Error loading ratings.</p>';
            }
        });
    }

    // Load ratings for a custom date range
    function loadRatingsForPeriod() {
        const ratingsResult = document.getElementById('ratingsResult');
        ratingsResult.style.display = 'block';
        ratingsResult.innerHTML = '<p class="text-center">Loading ratings for selected period...</p>';

        $.ajax({
            url: '@Url.Action("GetRatingsForPeriod", "BusinessHome", new { area = "BusinessArea" })',
            type: 'GET',
            success: function (data) {
                displayRatings(data);
            },
            error: function () {
                ratingsResult.innerHTML = '<p class="text-center text-danger">Error loading ratings.</p>';
            }
        });
    }

    // Display ratings in the ratingsResult div
    function displayRatings(ratings) {
        const ratingsResult = document.getElementById('ratingsResult');
        ratingsResult.innerHTML = '';

        if (ratings.length === 0) {
            ratingsResult.innerHTML = '<p class="text-center">No ratings found for the selected period.</p>';
            return;
        }

        ratings.forEach(rating => {
            const ratingDiv = document.createElement('div');
            ratingDiv.className = 'card mb-2';
            ratingDiv.innerHTML = `
                        <div class="card-body">
                            <h6>${rating.clientName}</h6>
                            <p>Rating: ${rating.stars}⭐</p>
                            <p>${rating.feedback}</p>
                        </div>
                    `;
            ratingsResult.appendChild(ratingDiv);
        });
    }
</script>
