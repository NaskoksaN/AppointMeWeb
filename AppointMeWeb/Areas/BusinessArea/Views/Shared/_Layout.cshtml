<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] | Schedule Made Simple</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AppointMeWeb.styles.css" asp-append-version="true" />

    <style>
        html, body {
            height: 100%; 
            margin: 0; 
        }

        body {
            display: flex; 
            flex-direction: column; 
        }

        header {
            flex: 0 0 auto; 
        }

        main {
            flex: 1 1 auto; 
            overflow-y: auto; 
            margin: 0; 
        }

        footer {
            flex: 0 0 auto; 
        }

        .container{
            flex: 1 1 100%;
        }
        .navbar.bg-custom {
            background-color: #273E51 !important;
        }

            .navbar.bg-custom .nav-link {
                color: #FF8C00 !important; 
                transition: color 0.3s ease, background-color 0.3s ease; 
            }

                .navbar.bg-custom .nav-link:hover {
                    color: #fff !important; 
                    background-color: #FF8C00 !important; 
                }

            .navbar.bg-custom .dropdown-menu {
                background-color: #273E51 !important; 
            }

                .navbar.bg-custom .dropdown-menu .dropdown-item {
                    color: #FF8C00 !important; 
                }

                    .navbar.bg-custom .dropdown-menu .dropdown-item:hover {
                        color: #fff !important; 
                        background-color: #FF8C00 !important; 
                    }

        .footer {
            background-color: #273E51 !important;
            color: #FF8C00 !important;
            padding: 1rem;
            text-align: center;
        }

            .footer a {
                color: #FF8C00 !important;
            }

                .footer a:hover {
                    color: white !important;
                }

        .linkedin-icon:hover {
            background-color: #FF8C00 !important;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm bg-custom border-bottom box-shadow mb-3">
            <div class="container-fluid">
                @if (User.IsBusinessProvider())
                {
                    <div class="navbar-collapse d-flex justify-content-between align-items-center">
                        @await Component.InvokeAsync(nameof(BusinessAreaMenuComponent))
                        <partial name="_LoginPartial" />
                    </div>
                }
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-1">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        @await Component.InvokeAsync(nameof(FooterComponent))
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
